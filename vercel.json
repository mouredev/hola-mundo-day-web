{
    "version": 2,
    "builds": [
        {
            "src": "build.sh",
            "use": "@now/static-build",
            "config": {
                "distDir": "public"
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}